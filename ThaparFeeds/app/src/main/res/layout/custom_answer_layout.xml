<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/answer_up_vote"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/up_inactive"/>

            <TextView
                android:id="@+id/answer_question_details_votes"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:hint="35"
                android:textAlignment="center"
                android:textSize="30sp"/>
            <ImageView
                android:id="@+id/answer_down_vote"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/down_inactive"/>
        </LinearLayout>
        <TextView
            android:id="@+id/answer_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />
        </LinearLayout>

    

    <TextView
        android:id="@+id/answer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="end"
        android:hint="Asked by username"/>
